.c-card
  margin: 25px
  width: 300px
  background gray
  display: flex
  flex-direction: column
  align-items: center
  
  &__content
    position: relative
    width: calc(100% - 30px)

  &__frame
    width: 100%
    height: auto
    display: block
    margin: 0 auto
  
  &__monster
    position: absolute
    bottom: 0%
    left: 0%
    width: 100%
    height: auto
  
  &__statistics
    position: absolute
    top: 30px
    right: 17px
    width: 30%
    img
      display: block
      width: 100%
      height: auto