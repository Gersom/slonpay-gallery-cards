.c-card
  margin: 25px
  width: 300px
  background: #11124a
  display: flex
  flex-direction: column
  align-items: center
  color: #eee
  border-radius: 15px
  padding-top: 20px
  
  &__content
    position: relative
    width: calc(100% - 30px)

  &__frame
    width: 100%
    height: auto
    display: block
    margin: 0 auto
  
  &__monster
    position: absolute
    bottom: 0%
    left: 0%
    width: 100%
    height: auto
  
  &__statistics
    position: absolute
    top: 30px
    right: 20px
    display: flex
    align-items: flex-end
    flex-direction: column
    img
      display: block
      height: auto
      max-height: 35px
      margin-bottom: 5px
      max-width: 25px
    img:nth-child(2)
      margin-bottom: 13px
    // img:nth-child(3)
  &__numbers
    align-items: flex-end
    display: flex
    display: flex
    flex-direction: column
    font-size: 16px
    position: absolute
    right: 28px
    top 33px
    font-weight: 800
    &>*
      color: #eee
      margin-top 14px
      // text-shadow: 3px 2px 10px rgb(66, 66, 66)
      height: 25px
      background: rgb(255, 228, .5)
      background: linear-gradient(90deg, #02002400 0%, #ffd211 100%)
      border-radius: 20px
      width: 50px
      display: flex
      align-items: center
      justify-content: flex-end
      padding-right: 20px
    &>*:nth-child(1)
      margin-top 0