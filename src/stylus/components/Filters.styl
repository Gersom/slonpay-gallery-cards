.c-filters
  display: flex
  justify-content: center
  &__wrapper
    width: 1200px
    margin: 0 15px
    display: flex
    justify-content: space-between
    align-items: center
    height: 150px
  
  &__text
    font-size: 30px
    color: #fff
  
  &__content
    display: flex
    button
      border: 2px solid #A9DEEE80
      display: flex
      align-items: center
      justify-content: center
      font-size: 18px
      color: #A9DEEE
      height: 57px
      padding: 0 25px
      margin-left: 20px
    button:hover
      background: #A9DEEE
      color #123B53