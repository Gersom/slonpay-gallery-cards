.c-filters
  display: flex
  justify-content: center
  &__wrapper
    width: 1200px
    margin: 0 20px
    display: flex
    justify-content: space-between
    align-items: center
    height: 150px
    @media screen and (max-width: 750px)
      flex-direction: column
      margin: 0 20px 30px 20px
      justify-content: space-around
  
  &__text
    font-size: 30px
    color: #fff
    @media screen and (max-width: 750px)
      margin: 0
  
  &__content
    display: flex
    button
      border: 2px solid #A9DEEE80
      display: flex
      align-items: center
      justify-content: center
      font-size: 18px
      color: #A9DEEE
      height: 57px
      padding: 0 25px
      margin-left: 20px
    button:hover
      background: #A9DEEE
      color #123B53
    @media screen and (max-width: 750px)
      button
        margin-left: 15px
      button:nth-child(1)
        margin-left: 0
    @media screen and (max-width: 600px)
      width: 100%
      button
        height: initial
        border: none
        border-left: 1px solid #A9DEEE50
        margin-left: 0
        padding: 0
        width: 100%
      button:nth-child(1)
        border-left: none
